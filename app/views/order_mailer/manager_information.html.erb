<table class="body-wrap">
  <td class="container" width="600">
    <div class="content">
      <table class="main" width="100%" cellpadding="0" cellspacing="0">
        <tr>
          <td class="content-wrap aligncenter">
            <table width="100%" cellpadding="0" cellspacing="0">
              <tr>
                <td class="content-block">
                  <%= link_to manager_root_url do %>
                    <%= image_tag (image_path 'mailer/header.png'), class:"img-responsive"  %>
                  <% end %>
                </td>
              </tr>
              <tr>
                <td class="content-block">
                  <table class="invoice">
                    <tr>
                      <td>
                        <h4 class="aligncenter"> <%= "Order #{@order.id} #{@order.status}" %></h4>
                        <%= @order.user_information.name %><br />
                        <%= @order.user_information.telephone %><br />
                        <%= @order.user.email %><br />
                        Comment: <%= @order.comment %><br />
                      </td>
                    </tr>
                    <tr>
                      <td>
                        <table class="invoice-items" cellpadding="0" cellspacing="0">
                          <% @order.line_items.each do |line_item| %>
                            <tr>
                              <%= link_to manager_product_url(line_item.product) do %>
                                <td><%= line_item.quantity %>x <%= line_item.product.title %> (<%= line_item.size.values.join(" / ") %>)</td>
                                <td class="alignright"><%= number_to_currency(line_item.quantity * line_item.product.price) %></td>
                              <% end %>
                            </tr>
                          <% end %>

                          <tr class="total">
                            <td class="alignright" width="80%">Total</td>
                            <td class="alignright"><%= number_to_currency @order.amount %></td>
                          </tr>
                        </table>
                      </td>
                    </tr>
                  </table>
                </td>
              </tr>
              <tr>
                <td class="content-block">
                  <%= link_to "View in browser", manager_order_url(@order) %>
                </td>
              </tr>
            </table>
          </td>
        </tr>
      </table>
    </div>
  </td>
</table>
