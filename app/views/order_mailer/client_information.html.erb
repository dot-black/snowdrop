<table class="body-wrap">
   <tr>
     <td></td>
     <td class="container" width="600">
       <div class="content">
         <table class="main" width="100%" cellpadding="0" cellspacing="0">
           <tr>
             <td class="content-wrap">
               <table cellpadding="0" cellspacing="0">
                 <tr>
                   <td>
                     <%= image_tag (image_path 'mailer/header.png'), class:"img-responsive"  %>
                   </td>
                 </tr>
                 <tr>
                   <td class="content-block">
                     <h3>Thank you for your order!</h3>
                   </td>
                 </tr>
                 <tr>
                   <td class="content-block">
                     You've just made an order. Our manager will contact with you to confirm it.
                   </td>
                 </tr>
                 <tr>
                   <td class="content-block">
                     <table class="invoice-items" cellpadding="0" cellspacing="0">
                       <% @order.line_items.each do |line_item| %>
                         <tr>
                           <td><%= image_tag( (line_item.product.images == [] ?  image_path("default/default_product_image.png") : image_path(line_item.product.images.first)),size: 64) %></td>
                           <td><%= line_item.quantity %>x <%= line_item.product.title %> (<%= line_item.size.values.join(" / ") %>)</td>
                           <td><%= number_to_currency(line_item.quantity * line_item.product.price) %></td>
                         </tr>
                       <% end %>
                       </tbody>
                     </table>
                     <br>
                     <p> <strong>Total: <%= number_to_currency @order.amount %></strong></p>
                   </td>
                 </tr>
               </table>
             </td>
           </tr>
         </table>
         <div class="footer">
           <table width="100%">
             <tr>
               <td class="aligncenter content-block">Visit <%= link_to "ARI DAR", store_url %> site.</td>
             </tr>
           </table>
         </div>
       </div>
     </td>
     <td></td>
   </tr>
 </table>
