<%= link_to cart_path do %>
  <i class="material-icons md-24 pull-right">shopping_cart</i>
  <% if @cart_line_items_quantity.present? %>
    <%=content_tag :div, class: "cart-badge#{' hidden' if @cart_line_items_quantity == 0}", id: "cart-badge" do %>
      <%= @cart_line_items_quantity %>
    <% end %>
  <% end %>
<% end  %>
