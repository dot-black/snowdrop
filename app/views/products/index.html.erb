<div class=category-item>
  <%= image_tag "categories/#{@current_category}.jpg", class: "category-image" %>
    <h2> <%= @current_category.pluralize(2).capitalize %> </h2>
    <span><%= "(#{pluralize @products.total_count, 'item'})" %></span>
<div>

<div class="products">
  <% @products.each do |product| %>
    <%= render partial: "product", locals: { product: product } %>
  <% end %>
</div>
<%= paginate @products %>
