<%= render partial: "categories" %>

<div class="container">
  <div class="product-detailed">

    <div class="product-detailed-images">
      <%= render 'images_carousel'%>
    </div>

    <div class="product-detailed-details">
      <h1><%= @product.title %></h1>
      <span><%= number_to_currency @product.price %></span>
      <%= form_for :line_item, url: line_items_path, remote: true  do |f| %>
        <%= f.fields_for :size do |ff| %>
          <% @product.sizes.each do |key,value| %>
            <% if @product.sizes[key].present? %>
              <%= ff.label "#{key} size" %>
              <%= ff.select key, ( key.downcase == "bra" ? @product.sizes[key].sort : @product.sizes[key].sort.reverse), {}, { class: "material-select" } %>
            <% end %>
          <% end %>
        <% end %>
        <%= f.hidden_field :product_id, value: @product.id   %>

        <div class="product-detailed-description">
          <h2>Description</h2>
          <p><%= @product.description %></p>
        </div>

        <%= f.submit "Add to cart", class: "material-button"%>
      <% end  %>
    </div>
  </div>
</div>
