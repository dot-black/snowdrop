<div class="container">
  <div class="product-detailed">

    <div class="product-detailed-image">
      <%= image_tag first_image(@product), size: 400 %>
    </div>

    <div class="product-detailed-details">
      <h1><%= @product.title %></h1>
      <span><%= number_to_currency @product.price %></span>

      <%= label_tag :size %>
      <%= select_tag :size, options_for_select(@product.sizes_collection) %>

      <%= label_tag :quantity %>
      <%= select_tag :quantity, options_for_select((1..4).to_a) %>

      <div class="product-detailed-description">
        <h2>Description</h2>
        <p> <%= @product.description %> </p>
      </div>

      <div>
        <%= link_to "Add to cart", "", class: "material-button"  %>
      </div>
    </div>
  </div>
</div>
