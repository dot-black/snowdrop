<div id="tab-2" class="tab-pane">
  <div class="panel-body">
    <div class="row">
      <div class="col-lg-12">
        <%= file_field_tag :images, multiple: true %>
      </div>
    </div>

    <br>

    <div class="table-responsive">
      <table class="table table-bordered table-stripped">
        <thead>
          <tr>
            <th>Image preview</th>
            <th></th>
          </tr>
        </thead>

        <tbody>
          <% @product.images.each_with_index do |image, index| %>
            <tr>
              <td><%= image_tag image, class: "img-md" %></td>
              <td>
                <%= link_to remove_single_image_manager_product_path(@product, index: index), class: "btn btn-white" do %>
                  <i class="fa fa-trash"></i>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>

    </div>
  </div>
</div>
