<ul class="nav nav-tabs">
  <% products_categories_links.each do |key,link| %>
    <% if @current_category == 'manager_category' %>
      <%= content_tag :li, class: "#{'active' if key.to_s == Category.find(@current_id).slug.parameterize}" do %>
        <%= link_to key.capitalize, link, remote: true %>
      <% end %>
    <% else %>
      <%= content_tag :li, class: "#{'active' if key.to_s == @current_category}" do %>
        <%= link_to key.capitalize, link, remote: true %>
      <% end %>
    <% end %>
  <% end %>
</ul>
