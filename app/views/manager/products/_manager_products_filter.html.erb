<ul class="nav nav-tabs">
  <%= content_tag :li, class: "#{'active' if params[:visible].blank? and params[:hidden].blank? and params[:manager_category].blank? }" do %>
    <%= link_to t('manager.layout.all'), manager_products_path %>
  <% end %>
  <%= content_tag :li, class: "#{'active' if params[:visible].present?}" do %>
    <%= link_to t('manager.layout.visible'), manager_products_path(visible: "true") %>
  <% end %>
  <%= content_tag :li, class: "#{'active' if params[:hidden].present?}" do %>
    <%= link_to t('manager.layout.hidden'), manager_products_path(hidden: "true") %>
  <% end %>

  <% @categories.each do |category| %>
    <%= content_tag :li, class: "#{'active' if category == @current_category}" do %>
      <%= link_to category.title, manager_products_path(manager_category: category.id) %>
    <% end %>
  <% end %>
</ul>
