<div id="tab-1" class="tab-pane active">
  <div class="panel-body">
    <fieldset class="form-horizontal">
      <div class="field">
        <div class="form-group">
          <%= form.label :title, class:"col-sm-2 control-label" %>
          <div class="col-sm-10">
            <%= form.text_field :title, id: :product_title, placeholder:"Product name", class:"form-control" %>
          </div>
        </div>
      </div>

      <div class="form-group">
        <%= form.label :price, class:"col-sm-2 control-label" %>
        <div class="col-sm-10">
          <%= form.text_field :price, id: :product_price, placeholder:"Product price", class:"form-control" %>
        </div>
      </div>

      <div class="form-group">
        <%= form.label :category, class:"col-sm-2 control-label", title: "choose category" %>
        <div class="col-sm-10">
          <%= form.collection_select :category_id, Category.all, :id, :title, { }, { class:"selectpicker form-control m-b", title: 'Select category', id:"manager-product-category" } %>
        </div>
      </div>

      <div class="form-group">
        <%= form.label :sizes, class:"col-sm-2 control-label" %>
        <%= hidden_field_tag :sizes, @product.sizes.to_json, id: "hiden-manager-sizes" %>
        <%= form.fields_for :sizes do |ff| %>
          <div class="col-sm-10">
            <%= render partial: "select_sizes", locals: { form: ff, category: :standard, sizes: Product.sizes[:standard]} %>
            <%= render partial: "select_sizes", locals: { form: ff, category: :bra, sizes: Product.sizes[:bra]} %>
          </div>

        <% end %>
      </div>

      <div class="form-group">
        <%= form.label :priority, class:"col-sm-2 control-label"%>
        <div class="col-sm-10">
          <%= form.select :priority, Product.priorities.keys, {}, { class:"form-control m-b" } %>
        </div>
      </div>


      <div class="form-group">
        <%= form.label :description, class:"col-sm-2 control-label" %>
        <div class="col-sm-10">
          <%= form.text_area :description, id: :product_description, placeholder: "Enter description here", class: "form-control" %>
        </div>
      </div>
    </fieldset>
  </div>
</div>
