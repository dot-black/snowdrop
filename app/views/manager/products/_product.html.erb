<div class="col-md-3">
  <div class="ibox">
    <div class="ibox-content product-box">
      <div class="product-imitation" style="padding: 15px 0px">
        <%= image_tag product.images.first, size: 160 %>
      </div>
      <div class="product-desc">
        <span class="product-price">
          <%= product.price %>
        </span>
        <small class="text-muted">Category</small>
        <%= link_to product.title, edit_manager_product_path(product), class: "product-name" %>

        <div class="small m-t-xs">
          Many desktop publishing packages and web page editors now.
        </div>

        <div class="m-t text-righ">
          <%= link_to edit_manager_product_path(product), class: "btn btn-xs btn-outline btn-primary" do %>
            Edit
            <i class="fa fa-long-arrow-right"></i>
          <% end %>

          <%= link_to "Hide", "#", class: "btn btn-xs btn-outline btn-danger pull-right" %>
        </div>
      </div>

    </div>

  </div>
</div>
