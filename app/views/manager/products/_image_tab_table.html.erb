<table class="table table-bordered table-stripped">
  <thead>
    <tr>
      <th>Image preview</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% if @product.valid? %>
      <% @product.images.each_with_index do |image, index| %>
        <tr>
          <td><%= image_tag image, size: 64, class: "manager-product-image" %></td>
          <td>
            <%= link_to remove_single_image_manager_product_path(@product, index: index), class: "btn btn-white", remote: true do %>
              <i class="fa fa-trash"></i>
            <% end %>
          </td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>
