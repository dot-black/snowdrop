<%= link_to manager_product_path(product) do %>
  <div class="oriented">
    <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3">
      <div class="ibox">
        <div class="ibox-content product-box">
          <div class="product-imitation">
            <%= image_tag default_or_first_image(product), class:'img-responsive' %>
          </div>
          <div class="product-desc">

            <% if product.discount and product.discount.actual %>
              <span class="product-discount-price">
                <%= product.discount_price %>
              </span>
            <% else %>
              <span class="product-price">
                <%= product.price %>
              </span>
            <% end %>
            <span class="product-name">
              <%= product.title.truncate 20 %>
            </span>
            <div class="small m-t-xs">
              <small class="text-muted"><%= product.category.title %></small>
              |
              <small class="text-muted">Priority: <%= product.priority.upcase %></small>
            </div>
            <div class="small m-t-xs">
              <%= product.description.truncate 100 %>
            </div>

            <div class="m-t text-righ">
              <%= link_to archive_manager_product_path(product), class: "btn btn-xs btn-outline btn-danger" do %>
                <i class="fa fa-minus-square-o"></i> Archive
              <% end %>

              <% if product.visible %>
                <%= link_to "Hide", change_appearance_manager_product_path(product), class: "btn btn-xs btn-outline btn-warning pull-right" %>
              <% else %>
                <%= link_to "Release", change_appearance_manager_product_path(product), class: "btn btn-xs btn-outline btn-primary pull-right" %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end  %>
