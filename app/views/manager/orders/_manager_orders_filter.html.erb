<ul class="nav nav-tabs hidden-xs">
  <%= content_tag :li, class: "#{'active' if @current_status.blank? }" do %>
    <%= link_to t("activerecord.attributes.order.statuses.all").capitalize, manager_orders_path %>
  <% end %>
  <% orders_status_links.each do |key,link| %>
    <%= content_tag :li, class: "#{'active' if key.to_s == @current_status }" do %>
      <%= link_to t("activerecord.attributes.order.statuses.#{key}").capitalize, link %>
    <% end %>
  <% end %>
</ul>

<ul class="nav nav-tabs visible-xs">
  <%= content_tag :li, class: "#{'active' if @current_status.blank? }" do %>
    <%= link_to t("activerecord.attributes.order.statuses.all").capitalize, manager_orders_path %>
  <% end %>
  <%= content_tag :li, class: "#{'active' if "pending" == @current_status }" do %>
    <%= link_to t("activerecord.attributes.order.statuses.pending").capitalize, manager_orders_path(status: "pending") %>
  <% end %>
</ul>
