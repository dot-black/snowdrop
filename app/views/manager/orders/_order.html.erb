<div class="row">
  <div class="col-lg-12">
    <%= form_for [:manager, @order], method: "put" do |f| %>
      <div class="ibox-title">
        <%= select_tag "order[status]", options_for_select(Order.statuses.keys, @order.status), class:"selectpicker" %>
        <small class="pull-right text-muted">Order #<%= @order.id  %> Created: <%= @order.created_at.strftime("%a %b %d %Y - %H:%M:%S") %></small>
      </div>


      <div class="ibox-content">
        <div class="row">

          <div class="col-md-8">
              <table class="table table-hover aligned">
                <tbody>
                <% @order.line_items.each do |line_item| %>
                  <tr>
                    <td><%= line_item.quantity %> X </td>
                    <td><%= image_tag first_image(line_item.product), size:128  %></td>
                    <td><%= line_item.product.title %></td>
                    <td><%= line_item.size.to_a.join(' ') %></td>
                    <td><%= number_to_currency line_item.product.price %></td>
                  </tr>
                <% end  %>
                </tbody>
              </table>
          </div>

          <div class="col-md-4">
            <div class="chat-user">
              <div class="chat-user-name">
                <strong>Name: </strong><%=@order.name%>
              </div>
            </div>

            <div class="chat-user">
              <div class="chat-user-name">
                <strong>Email: </strong><%=@order.email%>
              </div>
            </div>

            <div class="chat-user">
              <div class="chat-user-name">
                <strong>Amount: </strong><%=number_to_currency @order.amount%>
              </div>
            </div>

            <div class="chat-user">
              <div class="chat-user-name">
                <strong>Comment: </strong><%=@order.comment %>
              </div>
            </div>
          </div>
        </div>
      </div>
      <%= f.submit "Submit", class:"btn btn-primary fixed-right" %>
    <% end %>
  </div>
</div>
