<div class="row">
  <div class="col-lg-12">
    <div class="ibox">
      <div class="ibox-content">
        <% if @orders.present? %>
          <table class="table table-hover table-stripped toggle-arrow-tiny" id="orders-table">
            <thead>
            <tr>
              <th>Order ID</th>
              <th>Customer</th>
              <th>Amount</th>
              <th>Date added</th>
              <th>Date modified</th>
              <th>Status</th>
              <th class="text-right">Action</th>
            </tr>
            </thead>
            <tbody>
              <% @orders.each do |order|  %>
                <tr data-href= "<%= manager_order_path(order) %>">
                  <td><%= order.id %></td>
                  <td><%= order.name %></td>
                  <td><%= number_to_currency order.amount %></td>
                  <td><%= order.created_at.strftime("%d.%m.%Y") %></td>
                  <td><%= order.updated_at.strftime("%d.%m.%Y") %></td>
                  <td><span class="label label-primary"><%= order.status  %></span></td>
                  <td class="text-right">
                    <%= link_to "View", manager_order_path(order), class: "btn-white btn btn-xs" %>
                  </td>
                </tr>
              <% end %>
            </tbody>
        </table>
          <div class="text-center">
            <%= paginate @orders %>
          </div>
        <% else %>
          <div class="text-center">
            <h2>No information</h2>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
