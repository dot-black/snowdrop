<div class="row">
  <div class="col-lg-12">
    <div class="ibox">
      <div class="ibox-content">

        <table class="table table-stripped toggle-arrow-tiny">
          <thead>
          <tr>
            <th>Order ID</th>
            <th>Customer</th>
            <th>Amount</th>
            <th>Date added</th>
            <th>Date modified</th>
            <th>Status</th>
            <th class="text-right">Action</th>
          </tr>
          </thead>
          <tbody>
            <% if @orders.present? %>
              <% @orders.each do |order|  %>
              <tr>
                <td><%= order.id %></td>
                <td><%= order.name %></td>
                <td><%= number_to_currency order.amount %></td>
                <td><%= order.created_at.strftime("%d.%m.%Y") %></td>
                <td><%= order.updated_at.strftime("%d.%m.%Y") %></td>
                <td><span class="label label-primary"><%= order.status  %></span></td>
                <td class="text-right">
                  <div class="btn-group">
                    <%= link_to "View", manager_order_path(order), class: "btn-white btn btn-xs" %>
                  </div>
                </td>
              </tr>
              <% end %>
            <% else %>
              <div class="text-center">
                <h2>No information</h2>
              </div>
            <% end %>
          </tbody>
        </table>
        <div class="text-center">
          <%= paginate @orders %>
        </div>
      </div>
    </div>
  </div>
</div>
