<div class="row wrapper border-bottom white-bg page-heading">
  <div class="col-sx-12 col-sm-12 col-md-12 col-lg-12">
    <h2> <%= current_page_name %> </h2>
    <ol class="breadcrumb">
      <li><%= current_page_name %></li>
      <li><b>List</b></li>
    </ol>
  </div>
</div>
<div class="wrapper wrapper-content animated fadeInRight ecommerce">
  <div class="col-xs-12 col-sm-12 col-md-8 col-lg-8 manager-orders-filter">
    <%= render 'manager_orders_filter' %>
  </div>
  <div class="col-xs-12 col-sm-12 col-md-4 col-lg-4 pull-right" >
      <%= form_tag manager_orders_path, class: "form-group search-form input-group", method: :get, remote: true do  %>
          <%= hidden_field_tag :status, @current_status %>
          <%= text_field_tag :search_query, nil, class: "form-control", placeholder: "Search", autofocus: true %>
          <span class="input-group-btn"><%= button_tag "Clear", id: "clear_search", class: "btn btn-default" %></span>
      <% end %>
  </div>
</div>
  <div class="orders-list">
    <%= render 'list' %>
  </div>
</div>
