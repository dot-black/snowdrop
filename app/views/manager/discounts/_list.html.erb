<div class="row">
  <div class="col-lg-12">
    <div class="ibox">
      <div class="ibox-content">
        <% if @discounts.present? %>
        <div class="form-group">
          <table class="table table-hover table-stripped toggle-arrow-tiny" id="discounts-table">
            <thead>
            <tr>
              <th>Title</th>
              <th>Value</th>
              <th class="hidden-xs">Starts at</th>
              <th class="hidden-xs">Ends at</th>
              <th class="hidden-xs">Products</th>
              <th class="text-center">Active</th>
            </tr>
            </thead>
            <tbody>
              <% @discounts.each do |discount|  %>
                <tr data-link= "<%= manager_discount_path(discount) %>" class="selectable-row">
                  <td><%= discount.title %>
                  <td><%= number_to_percentage discount.value, precision: 0 %></td>
                  <td class="hidden-xs"><%= discount.start_at ? discount.start_at.strftime("%d.%m.%Y") : "Any time"%></td>
                  <td class="hidden-xs"><%= discount.end_at ? discount.end_at.strftime("%d.%m.%Y") : "Never"%></td>
                  <td class="hidden-xs"><%= discount.products.count%></td>
                  <td class="unselectable">
                    <%= link_to manager_discount_path(discount) do%>
                      <% case discount.actual %>
                      <% when true %>
                        <%= content_tag :span, discount.actual, class: "label label-success col-xs-12 col-sm-12" %>
                      <% when false %>
                        <%= content_tag :span, discount.actual, class: "label label-warning col-xs-12 col-sm-12" %>
                      <% end  %>
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
        </table>
          <div class="text-center">
            <%= paginate @discounts %>
          </div>
        <% else %>
          <div class="text-center">
            <h2>No information</h2>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
