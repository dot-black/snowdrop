<%= form_for [:manager, @discount] do |form| %>
  <% if @discount.errors.any? %>
    <div id="error_explanation">
      <h2><%= t 'activerecord.errors.messages.record_invalid', errors: @discount.errors.count  %></h2>
      <ul>
        <% @discount.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="wrapper wrapper-content animated fadeInRight ecommerce">
    <div class="row">
      <div class="col-lg-12">
        <div class="ibox product-detail">
          <div class="ibox-content">
            <fieldset class="form-horizontal">

              <div class="field">
                <div class="form-group">
                  <%= form.label :title, class:"col-sm-2 col-lg-1 control-label" %>
                  <div class="col-sm-10 col-lg-11">
                    <%= form.text_field :title, id: :discount_title,
                      placeholder: t('activerecord.attributes.discount.title'),
                      class:"form-control",
                      required: true %>
                  </div>
                </div>
              </div>

              <div class="form-group">
                <%= form.label :value, class:"col-sm-2 col-lg-1 control-label" %>
                <div class="col-sm-10 col-lg-11">
                  <%= form.number_field :value,
                    id: :discount_value,
                    placeholder: t('activerecord.attributes.discount.value'),
                    class:"form-control",
                    min: 1,
                    max: 99,
                    required: true %>
                </div>
              </div>



              <div class="form-group">
                <%= form.label :description, class:"col-sm-2 col-lg-1 control-label" %>
                <div class="col-sm-10 col-lg-11">
                  <%= form.text_area :description,
                    id: :discount_description,
                    placeholder: t('activerecord.attributes.discount.description'),
                    class: "form-control" %>
                </div>
              </div>

              <div class="form-group">
                <%= form.label :start_at, class:"col-sm-2 col-lg-1 control-label" %>
                <div class="col-sm-10 col-lg-11">
                  <%= form.text_field :start_at,
                    id: :discount_start_at,
                    class: "form-control date-time",
                    placeholder: "dd/mm/yyyy hh:mm"%>
                </div>
              </div>

              <div class="form-group">
                <%= form.label :end_at, class:"col-sm-2 col-lg-1 control-label" %>
                <div class="col-sm-10 col-lg-11">
                  <%= form.text_field :end_at,
                    id: :discount_end_at,
                    class: "form-control date-time",
                    placeholder: "dd/mm/yyyy hh:mm" %>
                </div>
              </div>

            </fieldset>

            <br>

            <div class="row">
              <div class="col-lg-12">
                <div class="form-group">
                  <%= form.submit class: "btn btn-primary pull-right" %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>
