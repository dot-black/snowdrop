<div class="row">
  <div class="col-lg-12">
    <div class="ibox">
      <div class="ibox-content">
        <% if @users.present? %>
        <div class="form-group">
          <table class="table table-hover table-stripped toggle-arrow-tiny" id="users-table">
            <thead>
            <tr>
              <th>ID</th>
              <th>Name</th>
              <th>Email</th>
              <th>Telephone</th>
            </tr>
            </thead>
            <tbody>
              <% @users.each do |user|  %>
                <tr data-link= "<%= manager_user_path(user) %>" class="selectable-row">
                  <td><%= user.id %></td>
                  <td><%= user.name.truncate 20 %>
                  <td><%= user.email.truncate 20 %></td>
                  <td><%= user.telephone %></td>
                  <td class="unselectable">
                    <%= link_to manager_user_path(user) do %>
                        <%= content_tag :span, 'show', class: "label label-success col-xs-12 col-sm-12" %>
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
        </table>
          <div class="text-center">
            <%= paginate @users %>
          </div>
        <% else %>
          <div class="text-center">
            <h2>No information</h2>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
