<div class="ibox-content">
  <div class="row">
    <div class="col-md-6">
      <h2 class="text-center">Client information</h1>
      <div class="chat-user">
        <div class="chat-user-name">
          <strong>User #</strong><%= @user.id  %>
        </div>
      </div>

      <div class="chat-user">
        <div class="chat-user-name">
          <strong>Name: </strong><%=@user.name%>
        </div>
      </div>

      <div class="chat-user">
        <div class="chat-user-name">
          <strong>Email: </strong><%=@user.email%>
        </div>
      </div>

      <div class="chat-user">
        <div class="chat-user-name">
          <strong>Telephone: </strong><%= @user.telephone %>
        </div>
      </div>
    </div>
    <div class="col-md-6">
      <h2 class="text-center">Orders</h1>
      <table class="table table-hover table-stripped toggle-arrow-tiny" >
        <th>Order</th>
        <th>Amount</th>
        <th>Status</th>
        <th>Updated</th>
        <tbody>
          <% unless @user.orders.present? %>
            <p class="text-center"> No information </p>
          <% end %>
          <% @user.orders.each do |order| %>
            <tr>
              <td>
                <%= link_to manager_order_path order do  %>
                  Order #<%= order.id %>
                <% end %>
              </td>
              <td><%= number_to_currency order.amount %></td>
              <td><%= order.status %></td>
              <td><%= order.updated_at.strftime("%a %b %d %Y - %H:%M:%S") %></td>
            </tr>
          <% end  %>
        </tbody>
      </table>
    </div>
  </div>
</div>
