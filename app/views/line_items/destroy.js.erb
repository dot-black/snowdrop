Turbolinks.clearCache();
$(".cart-logo").html('<%= j render "layouts/cart_logo" %>');
$("#line-items-count").html('<%= j render "carts/line_items_count" %>');
$("#cart-table").html('<%= j render "carts/cart_table" %>');
$(".cart-total-amount").each(function(){
  $(this).html('<%= j render(partial: "carts/cart_total_amount", locals: { total: @total }) %>');
});
<% if @cart.line_items.empty? %>
  $(".full-cart").remove();
  $(".empty-cart").html('<%= j render "carts/empty_cart" %>');
<% end %>
