<div class="container">

  <div class="cart-headline">
    <h2>Your Cart</h2>
    <span><%= "(#{pluralize @line_items.count, 'item'})" %></span>
  </div>


  <%= form_tag orders_path, method: "post" do %>
    <table class="table ">
      <tbody>
        <% @line_items.each do |line_item| %>
          <tr>
            <td><%= image_tag line_item.product.images.first, size:64 %></td>
            <td><%= line_item.product.title %></td>
            <td>Qty: <%=line_item.quantity%></td>
            <td>Size: <%= line_item.size.upcase %></td>
            <td> <%= number_to_currency line_item.product.price %></td>
            <td>
              <%= link_to line_item_path(line_item), method: "delete" do  %>
                <i class="glyphicon glyphicon-trash"></i>
              <% end  %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <div class="checkout-box">
      <span> <strong>Total: <%= number_to_currency @total  %> <strong></span>
      <%= submit_tag "Checkout", class:"material-button" %>
    </div>
  <% end  %>

</div>
