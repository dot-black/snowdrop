<% @products.each do |product| %>
  <div>
    <h3><%= product.title %></h3>
    <%= sanitize(product.description) %>
    <div>
      <span class="price"><%= number_to_currency(product.price) %></span>
      <%= button_to 'Add to Cart', line_items_path(product_id: product),remote: true %>
    </div>
  </div>
<% end %>
