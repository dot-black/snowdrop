<section  class="container features">
  <div class="row">
    <div class="col-lg-12 text-center">
        <div class="navy-line"></div>
        <h2><%= t '.contact_us' %></h2>
    </div>
  </div>
  <div class="row">
    <div class="text-center">
      <br>
      <div>
        <strong><span class="navy"><%= t 'application_name' %></span></strong><br/>
        <% if @addresses.present? %>
          <% @addresses.each do |address| %>
            <%= address.value %>
          <% end %>
          <br>
        <% end %>
        <% if @telephones.present? %>
          <% @telephones.each do |telephone| %>
            <%= telephone.value %><br>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-12 text-center">
      <br>
      <% if @email.present? %>
        <%= link_to t('.send_mail'), "mailto:#{@email.value}", class: "material-button" %>
        <br><br>
      <% end %>
      <% if @socials.present? %>
        <p><%= t('.follow_us') %></p>
        <ul class="list-inline social-icon">
        <% @socials.each do |social| %>
        <li>
          <%= link_to social.value do %>
            <% content_tag(:i, class: "fa fa-#{Contact.social_types[social.social_type]}"){}  %>
          <% end %>
        </li>
        <% end %>
        </ul>
      <% end %>
    </div>
  </div>
</section>
